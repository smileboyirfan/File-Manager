<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white">
    
    <!-- Navbar -->
    <nav class="bg-zinc-800 py-4 px-10 flex justify-between items-center">
        <h1 class="text-2xl font-bold">Task Manager</h1>
        <a href="/" class="text-blue-400 hover:text-blue-500">Home</a>
    </nav>
    
    <!-- Main Content -->
    <div class="main w-full min-h-screen flex flex-col items-center p-10">
        <div class="form w-full max-w-lg bg-zinc-800 p-6 rounded-lg shadow-lg">
            <form action="/create" method="post" class="space-y-3">
                <input class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-700" type="text" placeholder="Title goes here" name="title">
                <textarea class="block w-full rounded-md outline-none px-5 py-2 resize-none bg-zinc-700" placeholder="Write your task details" name="details"></textarea>
                <input class="w-full bg-blue-600 hover:bg-blue-700 px-5 py-2 rounded-md cursor-pointer transition" type="submit" value="Create task">
            </form>
        </div>
        
        <!-- Tasks List -->
        <div class="tasks w-full max-w-4xl mt-8 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            <% if(files.length > 0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task bg-zinc-800 p-4 rounded-lg shadow-lg">
                        <h1 class="text-xl font-semibold"><%= val %></h1>
                        <div class="flex justify-between items-center mt-3">
                            <a class="text-blue-400 hover:text-blue-500" href="/files/<%= val %>">Read More</a>
                            <a class="text-gray-400 hover:text-gray-300" href="/edit/<%= val %>">Edit</a>
                            <form action="/delete/<%= val %>" method="post" class="inline">
                                <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-md transition">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-gray-500 text-center">No tasks yet.</h3>
            <% } %>
        </div>
    </div>
    
    <!-- Footer -->
    <footer class="bg-zinc-800 text-center py-4 mt-10 text-gray-400">
        &copy; 2025 Task Manager | All Rights Reserved
    </footer>

    <script src="/javascripts/script.js"></script>
</body>
</html>
